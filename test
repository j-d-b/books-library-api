curl -v -X POST -H "Content-Type: application/json" http://localhost:3000/books -d '{"book":"Clamdiggers"}'
sleep 2
curl -v -X PATCH -H "Content-Type: application/json" http://localhost:3000/books -d '{"originalBook":"Clamdiggers", "newBook":"Clamdiggers Paradise"}'
sleep 2
curl -v -X DELETE -H "Content-Type: application/json" http://localhost:3000/books -d '{"book":"Clamdiggers Paradise"}'
